{
    "name": "artyom-e/credit-calculator",
    "description": "A simple PHP-based Credit Calculator that supports multiple types of loan payment calculations",
    "keywords": [
        "artyom-e",
        "credit-calculator"
    ],
    "homepage": "https://github.com/artyom-e/credit-calculator",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Artem Yeremenko",
            "email": "a7776e@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "ArtyomE\\CreditCalculator\\": "src/"
        }
    },
    "require": {
        "php": ">=8.3",
        "spatie/data-transfer-object": "^3.9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "analyse" : "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan --generate-baseline",
        "code-style": "./vendor/bin/php-cs-fixer fix src"
    },
    "config": {
        "sort-packages": true
    }
}
